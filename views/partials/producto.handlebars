<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <img src="/img/{{imagen}}" class="card-img-top" alt="{{nombre}}">
    <div class="card-body">
      <h5 class="card-title">{{nombre}}</h5>
      <p class="card-text">{{precio}} USD</p> <!-- Modificado para mostrar el precio -->
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary btn-agregar" data-id="{{id}}">Agregar al carrito</button>

          <!-- Puedes agregar más botones de acción si es necesario -->
        </div>
      </div>
    </div>
  </div>
</div>
